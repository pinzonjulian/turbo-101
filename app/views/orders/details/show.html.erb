<% details_identifier = dom_target(@order, :details) %>

<%= turbo_frame_tag @order, :details do  %>
  <article>
    <div class="flex items-center justify-between">
      <div>
        <h1 class="font-bold text-2xl">Order #<%= @order.id %></h1>
        <div class="mt-2">
          <%= render "orders/status", status: @order.status %>
        </div>
      </div>
      <button type="button"
              command="close"
              commandfor="<%= details_identifier %>"
              class="btn btn-sm btn-circle btn-ghost">âœ•</button>
    </div>
    
    <div class="mt-6">
      <h2 class="font-semibold text-lg mb-4">Items</h2>
      <div class="space-y-3">
        <label class="flex items-center gap-3">
          <input type="checkbox" class="checkbox checkbox-sm" />
          <span>Blue Cotton T-Shirt - Size M</span>
        </label>
        <label class="flex items-center gap-3">
          <input type="checkbox" class="checkbox checkbox-sm" />
          <span>Black Denim Jeans - Size 32</span>
        </label>
        <label class="flex items-center gap-3">
          <input type="checkbox" class="checkbox checkbox-sm" />
          <span>White Linen Button-Up Shirt - Size L</span>
        </label>
        <label class="flex items-center gap-3">
          <input type="checkbox" class="checkbox checkbox-sm" />
          <span>Charcoal Wool Sweater - Size M</span>
        </label>
        <label class="flex items-center gap-3">
          <input type="checkbox" class="checkbox checkbox-sm" />
          <span>Khaki Chino Pants - Size 32</span>
        </label>
      </div>
    </div>

    <div class="mt-6">
      <h2 class="font-semibold text-lg mb-3">Customer Preferences</h2>
      <p class="text-base leading-relaxed">Please ensure all items are folded neatly and packed in tissue paper. Customer prefers earth-tone colors and durable materials. Handle with care as they have sensitive skin. Include care instructions card with each piece. No plastic bags - use recyclable packaging if possible.</p>
    </div>
  </article>
<% end %>